{
  "name": "alldrive-backend",
  "version": "1.0.0",
  "description": "alldrive.ge backend",
  "author": "AllDrive",
  "repository": "alldrive/alldrive-backend",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "build": "tsc && tsup",
    "dev": "node --import=tsx --watch src/index.ts",
    "start:prod": "node dist/index.js",
    "check": "biome check --write",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write \"./src/**/*.+(js|ts|tsx|json|md)\""
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "17.2.0",
    "express": "5.1.0",
    "express-rate-limit": "7.5.1",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "pino": "9.7.0",
    "pino-http": "10.5.0",
    "swagger-ui-express": "5.0.1",
    "@repo/types": "workspace:*"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "pino-pretty": "13.0.0",
    "supertest": "7.1.3",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  },
  "packageManager": "pnpm@10.13.1"
}
